---
layout: none
---
{
  "posts" : [
    {% for post in site.posts %}
    {
      "title": "{{ post.title }}",
      "date": "{{ post.date }}",
      "author": "{{ post.author }}",
      "url": "{{ post.url }}",
      "external_file": "{{ post.external_file }}",
      "local_file": "{{ post.local_file }}",
      "audio": "{{ post.audio }}",
      "categories": {{ post.categories | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
